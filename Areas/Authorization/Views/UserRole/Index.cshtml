@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<FleetMasterPro013.Areas.Authorization.Models.UserRolesViewModel>

<h1 class="mb-4">User Role Management</h1>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>User Name</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    @if (user.Roles.Any())
                    {
                        @string.Join(", ", user.Roles)
                    }
                    else
                    {
                        <span class="text-muted">No roles assigned</span>
                    }
                </td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">
                        Manage Roles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
